{
    "version": 6,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": {
                    "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                    "type": "FILEPATH"
                }
            }

        },
        {
            "name": "x86_x64-Debug",
            "description": "Debug Configuration",
            "inherits": [
                "base"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x86_x64-Release",
            "description": "Release Configuration",
            "inherits": [
                "base"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "x86_x64-ASan",
            "description": "Debug Configuration With Address Sanitizer",
            "inherits": [
                "base"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "SANITIZE_ADDRESS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "x86_x64-ASan-MSVC",
            "description": "Debug Configuration With Address Sanitizer (cl.exe)",
            "inherits": [
              "base"
            ],
            "cacheVariables": {
              "CMAKE_C_COMPILER": "cl.exe",
              "CMAKE_CXX_COMPILER": "cl.exe"
            },
            "condition": {
              "type": "equals",
              "lhs": "${hostSystemName}",
              "rhs": "Windows"
            },
            "environment": {
              "CFLAGS": "/fsanitize=address",
              "CXXFLAGS": "/fsanitize=address"
            }
          },

        {
            "name": "x86_x64-Coverage",
            "description": "Code Coverage with lcov",
            "inherits": [
                "base"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "COVERAGE": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "x86_x64-Debug",
            "description": "Build Debug Configuration",
            "configurePreset": "x86_x64-Debug"
        },
        {
            "name": "x86_x64-Release",
            "description": "Build Release Configuration",
            "configurePreset": "x86_x64-Release"
        },
        {
            "name": "x86_x64-ASan",
            "description": "Build Configuration With Address Sanitizer",
            "configurePreset": "x86_x64-ASan"
        },
        {
            "name": "x86_x64-ASan-MSVC",
            "description": "Build Configuration With Address Sanitizer",
            "configurePreset": "x86_x64-ASan-MSVC"
        },
        {
            "name": "x86_x64-Coverage",
            "description": "Build Configuration With Coverage",
            "configurePreset": "x86_x64-Coverage",
            "targets": [
                "coverage"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "x86_x64-ASan",
            "configurePreset": "x86_x64-ASan",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            },
            "environment": {
                "ASAN_OPTIONS": "detect_leaks=1"
            }
        },
        {
            "name": "x86_x64-Debug",
            "configurePreset": "x86_x64-Debug"
        },
        {
            "name": "x86_x64-ASan-MSVC",
            "configurePreset": "x86_x64-ASan-MSVC"
        },
        {
            "name": "x86_x64-Release",
            "configurePreset": "x86_x64-Release"
        }
    ],
    "workflowPresets": [
        {
            "name": "coverage",
            "steps": [
                {
                    "type": "configure",
                    "name": "x86_x64-Coverage"
                },
                {
                    "type": "build",
                    "name": "x86_x64-Coverage"
                }
            ]
        },
        {
            "name": "test",
            "steps": [
                {
                    "type": "configure",
                    "name": "x86_x64-ASan"
                },
                {
                    "type": "build",
                    "name": "x86_x64-ASan"
                },
                {
                    "type": "test",
                    "name": "x86_x64-ASan"
                }
            ]
        }
    ]
}